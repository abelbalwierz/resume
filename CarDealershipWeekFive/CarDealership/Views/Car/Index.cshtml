@model IEnumerable<CarDealership.Models.Car>

@{
    ViewBag.Title = "Index";
}
<body style="background-color:lightgrey">
    <h2>Check out these fine, high-quality cars for sale! CLICK FOR DETAILS!</h2>
    <h4>@Html.ActionLink("Click to add a new car for sale", "Add", "Car", null, new { @style = "color:darkred" })</h4> 
    @if (ViewBag.User != null)
    {
        <h3>@ViewBag.User.UserMessage</h3>
    }
    <div class="container">

        @for (int i = 0; i < Model.Count(); i = i + 3)
        {
            var ca = Model.ElementAt(i);
            <div class="row">
                <div class="col-md-4">
                    <a href="@Url.Action("Details", new { id = ca.Id })">
                        <img src="@ca.ImageUrl" alt="This is a car for sale" class="car-image" />
                    </a>
                </div>
                @if ((i + 1) < Model.Count())
                {
                    ca = Model.ElementAt(i + 1);
                    <div class="col-md-4">
                        <a href="@Url.Action("Details", new { id = ca.Id })">
                            <img src="@ca.ImageUrl" alt="This is a car for sale" class="car-image" />
                        </a>
                    </div>
                }
                @if ((i + 2) < Model.Count())
                {
                    ca = Model.ElementAt(i + 2);
                    <div class="col-md-4">
                        <a href="@Url.Action("Details", new { id = ca.Id })">
                            <img src="@ca.ImageUrl" alt="This is a car for sale" class="car-image" />
                        </a>
                    </div>
                }

            </div>
                <div>
                    &nbsp;
                </div>
        }
    </div>
    </body>